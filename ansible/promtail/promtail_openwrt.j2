#!/bin/sh /etc/rc.common
# templates/promtail_openwrt.j2

START=95
USE_PROCD=1
PROG={{ promtail_binary_dir }}/promtail

start_service() {
    procd_open_instance
    procd_set_param command $PROG -config.file {{ promtail_config_file }}
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}